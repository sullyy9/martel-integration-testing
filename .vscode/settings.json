{
    // Specified in the Pep8 standard.
    "editor.rulers": [
        79
    ],
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "python.linting.pylintArgs": [
        "--generated-members"
    ],
    "robot.language-server.python": "${workspaceFolder}/.venv/Scripts/python.exe",
    "robot.pythonpath": [
        "${workspaceFolder}/martel_printer_test_library",
    ],
    "robot.variables": {
        "OUTPUT DIR": "${workspaceFolder}/output",
        "SAMPLE DIR": "${workspaceFolder}/samples"
    },

    "python.formatting.provider": "black",
    "python.analysis.packageIndexDepths": [

        {
            "name": "simplepyble",
            "depth": 3
        },
    ]
}